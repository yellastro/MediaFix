<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="50dp"
		style="?android:attr/buttonBarStyle"
		android:background="@color/main_midle"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="right|center">

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:text="RightM"
			android:layout_width="wrap_content"
			android:ems="5"
			android:layout_marginRight="15dp"/>

		<ImageButton
			
			android:layout_height="25dp"
			android:layout_width="30dp"
			android:src="@drawable/ic_sd_storage_black_48dp"
			android:layout_margin="5dp"
			android:tint="#FFFFFF"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"/>

		<ImageButton
			android:layout_height="25dp"
			android:layout_width="30dp"
			android:layout_margin="5dp"
			android:layout_marginRight="15dp"
			android:tint="#FFFFFF"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"
			android:src="@drawable/ic_settings_black_48dp"/>

	</LinearLayout>

	<TextView
		android:id="@+id/rename_list_coll_textview"
		android:layout_height="wrap_content"
		android:text="Rename XXX files"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_marginLeft="22dp"
		android:layout_marginTop="22dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="Rename format : artist - title"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_margin="19dp"/>

	<Button
		android:onClick="onStartClick"
		android:layout_height="wrap_content"
		android:text="Go on"
		android:layout_width="wrap_content"
		android:layout_margin="31dp"/>

</LinearLayout>

