<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/rename_list_activutyRelativeLayout"
		android:layout_height="50dp"
		style="?android:attr/buttonBarStyle"
		android:background="@color/main_midle"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="right|center">

		<ImageButton
			android:onClick="onBackClick"
			android:layout_height="30dp"
			android:layout_width="35dp"
			android:src="@drawable/arrow_left_bold"
			android:layout_margin="10dp"
			android:layout_alignParentLeft="true"
			android:tint="#FFFFFF"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"/>

		<TextView
			android:id="@+id/rename_list_coll_textview"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="Rename XXX files"
			android:textColor="#FFFFFF"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="150dp"/>

		<ImageButton
			android:id="@+id/rename_list_activutyImageButton"
			android:layout_height="30dp"
			android:layout_width="35dp"
			android:layout_margin="10dp"
			android:layout_marginRight="10dp"
			android:layout_alignParentRight="true"
			android:tint="#FFFFFF"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"
			android:src="@drawable/ic_settings_black_48dp"/>

		<ImageButton
			android:layout_height="30dp"
			android:layout_width="35dp"
			android:src="@drawable/ic_numeric"
			android:layout_margin="10dp"
			android:layout_toLeftOf="@id/rename_list_activutyImageButton"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"/>

	</RelativeLayout>

	<ListView
		android:layout_below="@id/rename_list_activutyRelativeLayout"
		android:id="@+id/rename_list_activutyListView"
		android:layout_height="300dp"
		android:layout_width="wrap_content"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_below="@id/rename_list_activutyListView"
		android:text="Rename format : artist - title"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_margin="19dp"/>

	<Button
		android:onClick="onStartClick"
		android:layout_height="wrap_content"
		android:text="Go on"
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>

