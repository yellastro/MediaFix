<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/mainActbarLayout"
		android:layout_height="50dp"
		style="?android:attr/buttonBarStyle"
		android:background="@color/main_midle"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="right|center">

		<ImageButton
			android:id="@+id/main_settingbutton"
			android:layout_height="30dp"
			android:layout_width="35dp"
			android:layout_margin="10dp"
			android:layout_marginRight="10dp"
			android:layout_alignParentRight="true"
			android:tint="#FFFFFF"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"
			android:src="@drawable/ic_settings_black_48dp"/>

		<ImageButton
			android:id="@+id/mainRootButton"
			android:onClick="onRootClick"
			android:layout_height="30dp"
			android:layout_width="35dp"
			android:src="@drawable/ic_sd_storage_black_48dp"
			android:layout_margin="10dp"
			android:layout_toLeftOf="@id/main_settingbutton"
			android:tint="#FFFFFF"
			android:scaleType="fitXY"
			style="?android:attr/buttonBarButtonStyle"/>

		<Button
			android:layout_height="wrap_content"
			style="?android:attr/buttonBarButtonStyle"
			android:text="RightM"
			android:layout_centerInParent="true"
			android:textColor="#FFFFFF"
			android:layout_width="wrap_content"
			android:ems="5"
			android:layout_toLeftOf="@id/mainRootButton"
			android:layout_alignParentLeft="true"
			android:layout_margin="10dp"/>

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/main_botBar"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true"
		style="?android:attr/buttonBarStyle"
		android:background="@color/main_midle"
		android:gravity="center">

		<Button
			android:id="@+id/bottomButton"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:background="@color/main_dark"
			android:textColor="#FFFFFF"/>

	</LinearLayout>

	<ListView
		android:layout_below="@id/mainActbarLayout"
		android:layout_above="@id/main_botBar"
		android:id="@+id/mainListView"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"/>

</RelativeLayout>

